<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:gravity="center" android:orientation="vertical" android:layout_width="fill_parent">
    <LinearLayout android:layout_height="wrap_content" android:layout_width="296dip">
        <LinearLayout android:layout_width="wrap_content" android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:background="@drawable/popup_bg_top_left"></LinearLayout>
        <LinearLayout android:layout_height="fill_parent" android:id="@+id/linearLayout2" android:layout_weight="1" android:layout_width="fill_parent" android:background="#AEAEAE"></LinearLayout>
        <LinearLayout android:layout_width="wrap_content" android:id="@+id/linearLayout3" android:background="@drawable/popup_bg_top_right" android:layout_height="wrap_content"></LinearLayout>
    </LinearLayout>
	<LinearLayout android:orientation="vertical"
		android:layout_width="296dip" android:layout_height="wrap_content"
		android:paddingLeft="12dip"
		android:paddingTop="0dip" android:paddingRight="12dip" android:background="#AEAEAE" android:paddingBottom="1.0dip">

		<LinearLayout android:id="@+id/dialog_Title"
			android:orientation="vertical" android:layout_width="fill_parent"
			android:layout_height="wrap_content">
			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:minWidth="250.7dip"
				android:gravity="center" android:paddingTop="2.0dip"
				android:paddingBottom="2.0dip">
				<TextView android:layout_height="fill_parent"
					android:id="@+id/dialogAlertTitleTextView" android:gravity="left"
					android:textSize="28pt" android:layout_width="fill_parent"
					android:textColor="#171717" />
			</LinearLayout>

			<LinearLayout android:layout_width="fill_parent"
				android:layout_height="1.3dip" android:background="@drawable/e_popup_line" >
			</LinearLayout>
		</LinearLayout>


		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:orientation="vertical">
			<LinearLayout android:id="@+id/dialog_Message"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:paddingTop="5.5dip" android:paddingBottom="5.5dip">
				<LinearLayout android:layout_width="fill_parent"
					android:orientation="vertical" android:gravity="center"
					android:layout_height="wrap_content">
					<LinearLayout android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:orientation="horizontal"
						android:layout_weight="1" android:layout_gravity="left">
						<TextView android:id="@+id/dialog_MessageTextView"
							android:textSize="24pt" android:gravity="center"
							android:textColor="#171717" android:layout_height="wrap_content"
							android:layout_width="wrap_content" android:paddingLeft="8dip" />
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout android:id="@+id/dialog_PayMessage"
				android:layout_width="fill_parent" android:layout_height="fill_parent"
				android:paddingTop="6.7dip" android:paddingBottom="6.7dip"
				android:background="#FFFFFF">
				<LinearLayout android:layout_width="fill_parent"
					android:orientation="vertical" android:gravity="left"
					android:layout_height="fill_parent">
					<LinearLayout android:layout_width="fill_parent"
						android:layout_height="wrap_content" android:orientation="vertical"
						android:layout_weight="1">
						
						<LinearLayout android:layout_width="fill_parent"
							android:layout_height="wrap_content" android:orientation="horizontal"
							android:layout_weight="1">
							<TextView android:id="@+id/dialog_PayNameTitle"
								android:textSize="24.66pt" android:layout_width="wrap_content"
								android:textColor="#171717" android:text="아이템명:"
								android:paddingLeft="8dip" android:layout_height="wrap_content" />

							<LinearLayout android:layout_width="fill_parent"
							android:layout_height="wrap_content" android:orientation="vertical"
							android:layout_weight="1">
								
							<TextView android:id="@+id/dialog_PayName1"
								android:textSize="24.66pt" android:layout_width="fill_parent"
								android:textColor="#171717"
								android:layout_height="wrap_content"
								android:singleLine="true" />
							<TextView android:id="@+id/dialog_PayName2"
								android:textSize="24.66pt" android:layout_width="fill_parent"
								android:textColor="#171717"
								android:layout_height="wrap_content" android:ellipsize="end"
								android:singleLine="true" />
							</LinearLayout>
						</LinearLayout>
						
						<TextView android:id="@+id/dialog_PayMoney"
							android:textSize="24.66pt" android:layout_width="fill_parent"
							android:textColor="#171717" android:text="hi"
							android:paddingLeft="8dip" android:layout_height="wrap_content" android:singleLine="true" android:ellipsize="end"/>
						<TextView android:id="@+id/dialog_PayType"
							android:textSize="24.66pt" android:layout_width="fill_parent"
							android:textColor="#171717" android:text="hi"
							android:paddingLeft="8dip" android:layout_height="wrap_content" />
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout android:id="@+id/dialog_PayInformation"
				android:layout_width="fill_parent" android:layout_height="wrap_content"
				android:paddingTop="6.7dip" android:visibility="gone">
				<LinearLayout android:layout_width="fill_parent"
					android:orientation="vertical" android:gravity="center"
					android:layout_height="wrap_content">
					<LinearLayout android:layout_width="wrap_content"
						android:layout_height="wrap_content" android:orientation="horizontal"
						android:layout_weight="1">
						<TextView android:textSize="20pt" android:layout_width="fill_parent"
							android:layout_gravity="top" android:textColor="#171717"
							android:layout_height="wrap_content"
							android:text="* 구매 완료 후 환불은 불가합니다.\n* 아이템 구매는 후불결제만 가능합니다." />
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>

		<LinearLayout android:id="@+id/Button_Layout"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:minHeight="41.3dip" android:gravity="center"
			android:visibility="gone" android:paddingTop="6.7dip">

			<Button android:id="@+id/Button_1" android:layout_width="fill_parent"
				android:layout_height="41.3dip" android:layout_weight="1"
				android:background="@drawable/popup_btn" android:textColor="#FFFFFF"
				android:textSize="24pt" android:gravity="center" android:visibility="gone" />

			<Button android:id="@+id/Button_2" android:layout_width="fill_parent"
				android:layout_height="41.3dip" android:layout_weight="1"
				android:background="@drawable/popup_btn" android:textColor="#FFFFFF"
				android:textSize="24pt" android:gravity="center"
				android:layout_marginLeft="4dip" android:visibility="gone" />

			<Button android:id="@+id/Button_3" android:layout_width="fill_parent"
				android:layout_height="41.3dip" android:layout_weight="1"
				android:background="@drawable/popup_btn" android:textColor="#FFFFFF"
				android:textSize="24pt" android:gravity="center"
				android:layout_marginLeft="4dip" android:visibility="gone" />

		</LinearLayout>
	</LinearLayout>
	<LinearLayout android:layout_height="wrap_content" android:layout_width="296dip">
		<LinearLayout android:layout_width="wrap_content" android:id="@+id/linearLayout4" android:layout_height="wrap_content" android:background="@drawable/popup_bg_botton_left"></LinearLayout>
		<LinearLayout android:layout_height="fill_parent" android:id="@+id/linearLayout5" android:layout_width="fill_parent" android:layout_weight="1" android:background="#AEAEAE"></LinearLayout>
		<LinearLayout android:layout_width="wrap_content" android:id="@+id/linearLayout6" android:layout_height="wrap_content" android:background="@drawable/popup_bg_botton_right"></LinearLayout>
	</LinearLayout>
</LinearLayout>